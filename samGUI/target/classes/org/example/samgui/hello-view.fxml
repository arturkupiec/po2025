<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.samgui.HelloController">

    <top>
        <VBox>
            <MenuBar BorderPane.alignment="CENTER">
                <menus>
                    <Menu mnemonicParsing="false" text="Plik" />
                    <Menu mnemonicParsing="false" text="Edycja" />
                </menus>
            </MenuBar>
            <ToolBar prefHeight="40.0" prefWidth="200.0">
                <items>
                    <Label text="Samochód:">
                        <padding>
                            <Insets right="5.0" />
                        </padding>
                    </Label>
                    <ComboBox fx:id="carComboBox" prefWidth="150.0" />
                    <Button mnemonicParsing="false" text="Dodaj nowy" onAction="#onOpenAddCarForm">
                        <HBox.margin>
                            <Insets left="10.0" />
                        </HBox.margin>
                    </Button>
                    <Button mnemonicParsing="false" text="Usuń" />
                </items>
            </ToolBar>
        </VBox>
    </top>

    <left>
        <ScrollPane hbarPolicy="NEVER" prefWidth="250.0" BorderPane.alignment="CENTER">
            <content>
                <VBox spacing="5.0">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>

                    <TitledPane animated="false" text="Samochód" VBox.vgrow="NEVER">
                        <content>
                            <VBox spacing="10.0">
                                <padding>
                                    <Insets top="10.0" />
                                </padding>
                                <GridPane hgap="10.0" vgap="5.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Model" GridPane.rowIndex="0"  />
                                        <Label text="Nr rejestracyjny" GridPane.rowIndex="1" />
                                        <Label text="Waga" GridPane.rowIndex="2" />
                                        <Label text="Prędkość" GridPane.rowIndex="3"/>
                                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="modelTextField" editable="false"  />
                                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id ="nrRejestracjiTextField" editable="fasle" />
                                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="wagaSamochoduTextFeld" editable="false"/>
                                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="predkoscTextField" editable="false"/>
                                    </children>
                                </GridPane>
                                <HBox spacing="10.0">
                                    <children>
                                        <Button fx:id="startButton" mnemonicParsing="false" onAction="#onStart" text="Włącz" />
                                        <Button mnemonicParsing="false" text="Wyłącz" />
                                        <Button mnemonicParsing="false" text="Button" />
                                    </children>
                                </HBox>
                            </VBox>
                        </content>
                    </TitledPane>

                    <TitledPane animated="false" text="Skrzynia Biegów">
                        <content>
                            <VBox spacing="10.0">
                                <padding>
                                    <Insets top="10.0" />
                                </padding>
                                <GridPane hgap="10.0" vgap="5.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Nazwa" />
                                        <Label text="Cena" GridPane.rowIndex="1" />
                                        <Label text="Waga" GridPane.rowIndex="2" />
                                        <Label text="Bieg" GridPane.rowIndex="3" />
                                        <TextField GridPane.columnIndex="1" fx:id="nazwaSkrzyniTextField" editable="false"/>
                                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="cenaSkrzyniTextField" editable="false"/>
                                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="wagaSkrzyniTextField" editable="false"/>
                                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="biegTextField" editable="false"/>
                                    </children>
                                </GridPane>
                                <HBox spacing="10.0">
                                    <children>
                                        <Button fx:id="upGearButton" mnemonicParsing="false" onAction="#upGear" text="Zwiększ bieg" />
                                        <Button fx:id="downGearButton" mnemonicParsing="false" onAction="#downGear" text="Zmniejsz bieg" />
                                    </children>
                                </HBox>
                            </VBox>
                        </content>
                    </TitledPane>

                    <TitledPane animated="false" text="Silnik">
                        <content>
                            <VBox spacing="10.0">
                                <padding>
                                    <Insets top="10.0" />
                                </padding>
                                <GridPane hgap="10.0" vgap="5.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Nazwa" />
                                        <Label text="Cena" GridPane.rowIndex="1" />
                                        <Label text="Waga" GridPane.rowIndex="2" />
                                        <Label text="Obroty" GridPane.rowIndex="3" />
                                        <TextField GridPane.columnIndex="1" fx:id = "nazwaSilnikaTextField" editable="false"/>
                                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id = "cenaSilnikaTextField" editable="false" />
                                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id = "wagaSilnikaTextField" editable="false" />
                                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id = "obrotySilnikaTextField" editable="false"/>
                                    </children>
                                </GridPane>
                                <HBox spacing="10.0">
                                    <children>
                                        <Button mnemonicParsing="false" text="Dodaj gazu" fx:id = "upSpeed" onAction="#upSpeed"/>
                                        <Button mnemonicParsing="false" text="Ujmij gazu" fx:id = "downSpeed" onAction="#downSpeed"/>
                                    </children>
                                </HBox>
                            </VBox>
                        </content>
                    </TitledPane>

                    <TitledPane animated="false" text="Sprzęgło">
                        <content>
                            <VBox spacing="10.0">
                                <padding>
                                    <Insets top="10.0" />
                                </padding>
                                <GridPane hgap="10.0" vgap="5.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Nazwa" />
                                        <Label text="Cena" GridPane.rowIndex="1" />
                                        <Label text="Waga" GridPane.rowIndex="2" />
                                        <Label text="Stan" GridPane.rowIndex="3" />
                                        <TextField GridPane.columnIndex="1" fx:id = "nazwaSprzeglaTextField" editable="false"/>
                                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id = "cenaSprzeglaTextField" editable="false"/>
                                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id = "wagaSprzeglaTextField" editable="false"/>
                                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id = "stanSprzeglaTextField" editable="false"/>
                                    </children>
                                </GridPane>
                                <HBox spacing="10.0">
                                    <children>
                                        <Button mnemonicParsing="false" text="Naciśnij" fx:id="upCluthButton" onAction="#upCluth" />
                                        <Button mnemonicParsing="false" text="Zwolnij" fx:id="downCluthButton" onAction="#downCluth"/>
                                    </children>
                                </HBox>
                            </VBox>
                        </content>
                    </TitledPane>
                </VBox>
            </content>
        </ScrollPane>
    </left>

    <center>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #b0f2a4;" BorderPane.alignment="CENTER" onMouseClicked="#onMapClick">
            <children>
                <Label layoutX="14.0" layoutY="14.0" text="Mapa">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <ImageView fx:id="carImageView" fitHeight="116.0" fitWidth="151.0" layoutX="24.0" layoutY="31.0" nodeOrientation="RIGHT_TO_LEFT" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../car_icon.jpg" />
                    </image>
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor>
                </ImageView>
                <Label layoutX="192.0" layoutY="102.0" text="Car" />
            </children>
        </AnchorPane>
    </center>




</BorderPane>
